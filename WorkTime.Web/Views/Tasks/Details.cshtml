@model WorkTime.Models.WorkTask
@using WorkTime.Web.Services
@inject UserInformation UserInfo

@{
    ViewData["Title"] = "Details";
}

<h1>Детали задачи</h1>

@Model.TaskName

<div>
    <h4>WorkTask</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Текст задачи
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskText)
        </dd>
        <dt class = "col-sm-2">
            Количество часов
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountOfHours)
        </dd>
        <dt class = "col-sm-2">
            Дата завершения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCompletion)
        </dd>
        <dt class = "col-sm-2">
            ID счёта (появляется после формирования счёта)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceId)
        </dd>
        <dt class = "col-sm-2">
            Выдал задачу
        </dt>
        <dd class = "col-sm-10">
            @UserInfo.GetName(Model.Issuer.Id)
        </dd>
        <dt class = "col-sm-2">
            Исполнитель
        </dt>
        <dd class = "col-sm-10">
            @UserInfo.GetName(Model.Performer.Id)
        </dd>
        <dt class = "col-sm-2">
            Проект
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class = "col-sm-2">
            Статус задачи
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskStatus.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
