@model WorkTime.Models.WorkTask

@{
    ViewData["Title"] = "Редактирование задачи";
}

<h1>Редактирование задачи</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label">Название задачи</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskText" class="control-label">Текст задачи</label>
                <textarea asp-for="TaskText" rows="3" class="form-control"></textarea>
                <span asp-validation-for="TaskText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Проект</label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId">
                    <option value="null">Без проекта</option>
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerformerId" class="control-label">Исполнитель</label>
                <select asp-for="PerformerId" class="form-control" asp-items="ViewBag.PerformerId"></select>
                <span asp-validation-for="PerformerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountOfHours" class="control-label">Количество часов</label>
                <input asp-for="CountOfHours" class="form-control" />
                <span asp-validation-for="CountOfHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskStatusId" class="control-label">Статус задачи</label>
                <select asp-for="TaskStatusId" class="form-control" asp-items="ViewBag.TaskStatusId"></select>
                <span asp-validation-for="TaskStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfCompletion" class="control-label">Дата завершения</label>
                <input type="date" asp-for="DateOfCompletion" class="form-control" />
                <span asp-validation-for="DateOfCompletion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvoiceId" class="control-label">Номер счёта</label>
                <input asp-for="InvoiceId" class="form-control" />
                <span asp-validation-for="InvoiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuerId" class="control-label">Назначил</label>
                <select asp-for="IssuerId" class="form-control" asp-items="ViewBag.IssuerId"></select>
                <span asp-validation-for="IssuerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#ProjectId").select2();
            $("#PerformerId").select2();
            $("#IssuerId").select2();
        });
    </script>

}
