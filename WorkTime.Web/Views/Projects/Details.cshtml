@model WorkTime.Models.Project

@{
    ViewData["Title"] = "Информация о проекте";
}

<h1>Информация о проекте</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Бонус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bonus)
        </dd>
        <dd class="col-sm10">
            <a type="button" class="btn btn-primary" asp-action="AddUserInProject" asp-route-id="@Model?.Id">Добавить пользователя</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
