@page
@model LoginModel

@{
    ViewData["Title"] = "Вход в систему";
}

<div class="mx-auto col-md-6 col-lg-4 background_login" style="margin-top: 80pt">
    <h4 class="text-center">Вход</h4>
    <form id="account" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mt-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password" class="form-label">Пароль</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
            <div class="checkbox mt-2">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    Запомнить меня
                </label>
            </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
        </div>
        <div class="mt-3">
            <p>
                <a style="text-decoration: none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
            </p>
            @{
                /*
                <p>
                <a style="text-decoration: none" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Выслать код активации</a>
                </p>
                 */
            }
            
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
